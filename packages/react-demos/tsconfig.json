{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "react-jsx",
		"target": "ESNext",
		"module": "CommonJS",
		"esModuleInterop": true,
		"declaration": false,
		"noEmit": true,
		"paths": {
			"@/*": ["src/*"],
			"@editor/*": ["src/editor-views/*"],
			"@ui/*": ["src/ui-views/*"]
		},
		/* Using vite */
		"types": ["vite/client"]
	},
	"exclude": ["./dist/**/*", "**/*.test.ts", "**/*.spec.ts", "**/*.test.tsx", "**/*.spec.tsx"]
}
