{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "react",
		"target": "ESNext",
		"module": "CommonJS",
		"esModuleInterop": true,
		"declaration": false,
		"noEmit": true,
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["./src/**/*"],
	"exclude": ["./dist/**/*", "**/*.test.ts", "**/*.spec.ts", "**/*.test.tsx", "**/*.spec.tsx"]
}
