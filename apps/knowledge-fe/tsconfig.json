{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "react-jsx",
		"target": "ESNext",
		"module": "ESNext",
		"esModuleInterop": true,
		"declaration": false,
		"noEmit": true,
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		/* Using vite */
		"types": [
			"vite/client"
		]
	},
	"exclude": [
		"./dist/**/*",
		"**/*.test.ts",
		"**/*.spec.ts",
		"**/*.test.tsx",
		"**/*.spec.tsx"
	]
}